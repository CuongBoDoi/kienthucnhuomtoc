        };

        const appContent = document.getElementById('appContent');
        const mainNav = document.getElementById('mainNav');
        let peroxideChartInstance = null;

        function renderSection(sectionId) {
            const sectionData = appData[sectionId];
            if (!sectionData) {
                appContent.innerHTML = '<p>Nội dung không tìm thấy.</p>';
                return;
            }

            let html = `<div class="bg-white p-6 rounded-lg shadow-lg">`;
            html += `<h2 class="text-3xl font-bold text-teal-700 mb-6 border-b-2 border-teal-500 pb-2">${sectionData.title}</h2>`;
            
            if (sectionData.intro) {
                html += `<p class="text-lg text-stone-700 mb-8 leading-relaxed">${sectionData.intro}</p>`;
            }

            if (sectionData.sections) {
                sectionData.sections.forEach(subSection => {
                    html += `<div id="${subSection.id}" class="mb-8 p-4 border border-stone-200 rounded-md bg-stone-50 shadow-sm">`;
                    html += `<h3 class="text-2xl font-semibold text-teal-600 mb-4">${subSection.title}</h3>`;
                    html += `<div class="prose prose-stone max-w-none text-stone-700 leading-relaxed">${subSection.content}</div>`;
                    html += `</div>`;
                });
            }

            if (sectionData.cards) {
                html += `<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">`;
                sectionData.cards.forEach(card => {
                    html += `
                        <div class="card rounded-lg p-6 cursor-pointer" onclick="toggleCardDetails(this)">
                            <h3 class="text-xl font-semibold text-teal-700 mb-3">${card.name}</h3>
                            <div class="card-details hidden text-sm text-stone-600 space-y-2">${card.details}</div>
                            <p class="text-teal-500 text-sm mt-3 font-medium">Nhấn để xem chi tiết</p>
                        </div>
                    `;
                });
                html += `</div>`;
            }
            html += `</div>`;
            appContent.innerHTML = html;

            if (sectionId === 'soSanh' && document.getElementById('peroxideChart')) {
                renderPeroxideChart();
            }
        }
        
        function toggleCardDetails(cardElement) {
            const details = cardElement.querySelector('.card-details');
            const promptText = cardElement.querySelector('p.text-teal-500');
            details.classList.toggle('hidden');
            if (details.classList.contains('hidden')) {
                promptText.textContent = 'Nhấn để xem chi tiết';
            } else {
                promptText.textContent = 'Nhấn để thu gọn';
            }
        }

        function renderPeroxideChart() {
            const ctx = document.getElementById('peroxideChart').getContext('2d');
            if (peroxideChartInstance) {
                peroxideChartInstance.destroy();
            }
            const data = {
                labels: ["10 Vol (3%)", "20 Vol (6%)", "30 Vol (9%)", "40 Vol (12%)"],
                datasets: [
                    {
                        label: 'Khả năng nâng tông (số tông)',
                        data: [0.25, 1.5, 2.5, 3.5], 
                        backgroundColor: 'rgba(54, 162, 235, 0.6)', // Blue
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1,
                        yAxisID: 'yTone',
                    },
                    {
                        label: 'Tỷ lệ đưa hạt màu vào tóc (%)',
                        data: [100, 75, 50, 25],
                        backgroundColor: 'rgba(255, 159, 64, 0.6)', // Orange
                        borderColor: 'rgba(255, 159, 64, 1)',
                        borderWidth: 1,
                        yAxisID: 'yPercent',
                    }
                ]
            };
            const config = {
                type: 'bar',
                data: data,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    interaction: {
                        mode: 'index',
                        intersect: false,
                    },
                    scales: {
                        x: {
                            stacked: false,
                            grid: { display: false }
                        },
                        yTone: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            title: {
                                display: true,
                                text: 'Số Tông Nâng Được'
                            },
                            beginAtZero: true,
                            max: 4 
                        },
                        yPercent: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            title: {
                                display: true,
                                text: 'Tỷ Lệ Hạt Màu (%)'
                            },
                            min: 0,
                            max: 100,
                            grid: {
                                drawOnChartArea: false, 
                            },
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.y !== null) {
                                        label += context.parsed.y;
                                        if (context.datasetIndex === 0) label += ' tông';
                                        if (context.datasetIndex === 1) label += '%';
                                    }
                                    const nồngĐộ = context.label;
                                    let khảNăngGiữMàu = '';
                                    if (nồngĐộ === "10 Vol (3%)") khảNăngGiữMàu = "Giữ màu: Rất tốt";
                                    else if (nồngĐộ === "20 Vol (6%)") khảNăngGiữMàu = "Giữ màu: Tốt";
                                    else if (nồngĐộ === "30 Vol (9%)") khảNăngGiữMàu = "Giữ màu: Trung bình";
                                    else if (nồngĐộ === "40 Vol (12%)") khảNăngGiữMàu = "Giữ màu: Kém, mau bay";
                                    
                                    return [label, khảNăngGiữMàu];
                                }
                            }
                        },
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'So Sánh Đặc Tính Các Nồng Độ Hydrogen Peroxide',
                            font: { size: 18 }
                        }
                    }
                }
            };
            peroxideChartInstance = new Chart(ctx, config);
        }

        mainNav.addEventListener('click', (event) => {
            if (event.target.tagName === 'BUTTON') {
                const sectionId = event.target.dataset.section;
                renderSection(sectionId);
                
                document.querySelectorAll('#mainNav button').forEach(btn => btn.classList.remove('active'));
                event.target.classList.add('active');
            }
        });

        document.addEventListener('DOMContentLoaded', () => {
            renderSection('tongQuan');
        });
    </script>
</body>
</html>
